function hoverb(obj1,obj2,cl)
{
	var id;
	$(obj1).mouseover(function(){
	id=$(obj1).index($(this));	
	//alert(id);
	$(obj1).removeClass(cl);
	$(this).addClass(cl);
	$(obj2).hide();
	//$(obj2).toggle(400);
	$(obj2).eq(id).show();
	})	
	$(obj2+":first").show();
}



