//菜单悬浮
$(window).scroll(function(){
					
					var top_jl =$(document).scrollTop();
					if(top_jl<343){
						$(".header_box_3").hide();
						$(".header_box_shadow").hide();
						$(".header_box").removeClass("header_box_2");
						$("#header_box").attr("style","");
						
						}else{
						$(".header_box_3").show();
						$(".header_box_shadow").show();
						$("#header_box").addClass("header_box_2").slideDown("slow");

						}
});

